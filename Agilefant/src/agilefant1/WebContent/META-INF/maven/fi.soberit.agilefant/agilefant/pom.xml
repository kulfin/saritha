	<profiles>
		<profile>
			<id>release</id>
			<build>
				<plugins>
					<plugin>
						<groupId>pl.project13.maven</groupId>
						<artifactId>git-commit-id-plugin</artifactId>
						<configuration>
							<dotGitDirectory>${project.basedir}/../.git</dotGitDirectory>
						</configuration>
					</plugin>
					<plugin>
						<artifactId>maven-war-plugin</artifactId>
						<configuration>
							<archive>
								<manifest>
									<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
								</manifest>
								<manifestEntries>
									<Agilefant-Build>${maven.build.timestamp}</Agilefant-Build>
								</manifestEntries>
							</archive>
						</configuration>
					</plugin>
					<plugin>
						<groupId>ro.isdc.wro4j</groupId>
						<artifactId>wro4j-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>optimize-cssjs</id>
								<phase>compile</phase>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<wroManagerFactory>ro.isdc.wro.maven.plugin.manager.factory.ConfigurableWroManagerFactory</wroManagerFactory>
							<destinationFolder>${project.build.directory}/${project.build.finalName}</destinationFolder>
							<cssDestinationFolder>${project.build.directory}/${project.build.finalName}/static/css</cssDestinationFolder>
							<jsDestinationFolder>${project.build.directory}/${project.build.finalName}/static/js</jsDestinationFolder>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>devel</id>
			<build>
				<resources>
					<resource>
						<directory>src/main/resources</directory>
					</resource>
					<resource>
						<directory>src/main/devel-resources</directory>
					</resource>
				</resources>
			</build>
		</profile>
	</profiles>

	<build>
		<finalName>agilefant</finalName>
		<plugins>
			<plugin>
    			<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<webResources>
						<resource>
							<directory>${basedir}/src/main/webapp/WEB-INF</directory>
    						<filtering>true</filtering>
    						<targetPath>WEB-INF</targetPath>
				    		<includes>
				    			<include>agilefant.conf</include>
				    		</includes>
						</resource>
					</webResources>
				</configuration>
			</plugin>		
		</plugins>	
	</build>

